{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@elder-first/types": ["../../packages/types/src"],
      "@elder-first/database": ["../../packages/database/src"],
      "@elder-first/config": ["../../packages/config/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/utils/bulletinValidation.test.ts",
    "src/utils/bookletPdf.test.ts"
  ]
}
